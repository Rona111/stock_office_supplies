<openerp>
    <data>
        <record model="workflow" id="wkf_borrow_order">
            <field name="name">Borrow Order Workflow</field>
            <field name="osv">stock_office_supplies.borrow_order</field>
            <field name="on_create">True</field>
        </record>

        <record model="workflow.activity" id="wkf_borrow_order_draft">
            <field name="name">Draft</field>
            <field name="wkf_id" ref="wkf_borrow_order"/>
            <field name="flow_start" eval="True"/>
            <field name="kind">function</field>
            <field name="action">action_draft()</field>
        </record>

        <record model="workflow.activity" id="wkf_borrow_order_cancelled">
            <field name="name">Cancelled</field>
            <field name="wkf_id" ref="wkf_borrow_order"/>
            <field name="flow_stop" eval="True"/>
            <field name="kind">function</field>
            <field name="action">action_cancel()</field>
        </record>

        <record model="workflow.activity" id="wkf_borrow_order_sent">
            <field name="name">Sent</field>
            <field name="wkf_id" ref="wkf_borrow_order"/>
            <field name="kind">function</field>
            <field name="action">action_sent()</field>
        </record>

        <record model="workflow.activity" id="wkf_borrow_order_approved">
            <field name="name">Approved</field>
            <field name="wkf_id" ref="wkf_borrow_order"/>
            <field name="kind">function</field>
            <field name="action">action_approved()</field>
        </record>

        <record model="workflow.activity" id="wkf_borrow_order_first_approved">
            <field name="name">First Approved</field>
            <field name="wkf_id" ref="wkf_borrow_order"/>
            <field name="kind">function</field>
            <field name="action">action_first_approved()</field>
            <field name="split_mode">OR</field>
        </record>

        <record model="workflow.activity" id="wkf_borrow_order_transferd">
            <field name="name">Transferd</field>
            <field name="wkf_id" ref="wkf_borrow_order"/>
            <field name="flow_stop" eval="True"/>
            <field name="kind">function</field>
            <field name="action">action_transferd()</field>
        </record>

        <record model="workflow.transition" id="borrow_order_draft_to_sent">
            <field name="act_from" ref="wkf_borrow_order_draft"/>
            <field name="act_to" ref="wkf_borrow_order_sent"/>
            <field name="signal">send</field>
        </record>

        <record model="workflow.transition" id="borrow_order_draft_to_cancelled">
            <field name="act_from" ref="wkf_borrow_order_draft"/>
            <field name="act_to" ref="wkf_borrow_order_cancelled"/>
            <field name="signal">cancel</field>
        </record>

        <record model="workflow.transition" id="borrow_order_sent_to_first_approved">
            <field name="act_from" ref="wkf_borrow_order_sent"/>
            <field name="act_to" ref="wkf_borrow_order_first_approved"/>
            <field name="signal">approve</field>
        </record>

        <record model="workflow.transition" id="borrow_order_first_approved_to_approved_1">
            <field name="act_from" ref="wkf_borrow_order_first_approved"/>
            <field name="act_to" ref="wkf_borrow_order_approved"/>
            <field name="condition">amount &gt;= 5000</field>
            <field name="signal">second_approve</field>
        </record>

        <record model="workflow.transition" id="borrow_order_first_approved_to_approved_2">
            <field name="act_from" ref="wkf_borrow_order_first_approved"/>
            <field name="act_to" ref="wkf_borrow_order_approved"/>
            <field name="condition">amount &lt; 5000</field>
        </record>

        <record model="workflow.transition" id="borrow_order_approved_to_transferd">
            <field name="act_from" ref="wkf_borrow_order_approved"/>
            <field name="act_to" ref="wkf_borrow_order_transferd"/>
            <field name="condition">picking_id.state=='done'</field>
        </record>

        <record model="workflow.transition" id="borrow_order_sent_to_draft">
            <field name="act_from" ref="wkf_borrow_order_sent"/>
            <field name="act_to" ref="wkf_borrow_order_draft"/>
            <field name="signal">refuse</field>
        </record>

    </data>
</openerp>